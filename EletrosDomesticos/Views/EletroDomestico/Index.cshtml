@model List<EletroDomestico>

    <h1>Tabela de funcionalidade de Eletro Domésticos</h1>  

    <table class = "table table-striped table-bordered">
        <thead>
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Consumo Energético</th>
                <th>Capacidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eletros in Model)
            {
                <tr>
                    <td>@eletros.Marca</td>
                    <td>@eletros.Modelo</td>
                    <td>@eletros.ConsumoEnergetico</td>
                    <td>
                        @if (eletros is Geladeira)
                    {
                        <strong>Tem Freezer:</strong> @(((Geladeira)eletros).TemFreezer ? "Sim" : "Não") <br/>
                    }
                    else if (eletros is Televisor)
                    {
                        <strong>SMART: </strong> @(((Televisor)eletros) .EhSmart? "Sim" : "Não")
                    }
                </td>
                </tr>
            }
        </tbody>
    </table>